{
  "name": "gitview",
  "version": "2.0.0",
  "description": "A comprehensive GitHub desktop client for monitoring Actions, managing repositories, pull requests, issues, and more",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "github",
    "actions",
    "monitor",
    "electron",
    "desktop",
    "git",
    "repository"
  ],
  "author": "Select Technology",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.6.0",
    "date-fns": "^3.0.0",
    "diff2html": "^3.4.47",
    "dotenv": "^16.6.1",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "marked": "^12.0.0",
    "simple-git": "^3.22.0"
  },
  "build": {
    "appId": "com.select-technology.github-actions-monitor",
    "productName": "GitView",
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GitView"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "index-new.html",
      "src/**/*"
    ]
  }
}
